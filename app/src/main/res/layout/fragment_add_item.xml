<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ar.com.alabarra.guicommons.gui.components.CustomTextView
        android:id="@+id/add_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Honey" />

    <ar.com.alabarra.guicommons.gui.components.CustomTextView
        android:id="@+id/add_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="Lorem Ipsum lorem ipsum" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_item_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/default_component_margin"
            app:srcCompat="@drawable/ic_minus" />

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/add_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_component_margin"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="60sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_item_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/default_component_margin"
            app:srcCompat="@drawable/ic_plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/add_item_dialog_cancel"
            style="@style/DarkButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_component_margin"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/add_item_dialog_accept"
            style="@style/AccentButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_component_margin"
            android:text="@string/accept" />

    </LinearLayout>

</LinearLayout>