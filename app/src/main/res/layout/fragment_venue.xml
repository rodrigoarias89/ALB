<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/venue_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <ar.com.alabarra.guicommons.gui.components.CustomTextView
                android:id="@+id/venue_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_component_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="ROSEBAR" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_component_margin"
                android:layout_marginLeft="@dimen/default_component_margin"
                android:layout_marginRight="@dimen/default_component_margin"
                android:layout_marginStart="@dimen/default_component_margin"
                android:orientation="horizontal">

                <ar.com.alabarra.guicommons.gui.components.CustomTextView
                    android:id="@+id/venue_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_component_margin"
                    android:layout_marginStart="@dimen/default_component_margin"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="Avenida Alfa 120" />

                <ar.com.alabarra.guicommons.gui.components.CustomTextView
                    android:id="@+id/venue_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_component_margin"
                    android:layout_marginLeft="@dimen/default_component_margin"
                    android:layout_marginRight="@dimen/default_component_margin"
                    android:layout_marginStart="@dimen/default_component_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="1,5 km" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/default_component_margin"
                android:background="@color/white" />

            <ar.com.alabarra.guicommons.gui.components.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_component_margin">

                <com.alabarra.gui.list.menues.MenuRecyclerView
                    android:id="@+id/venue_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:id="@+id/venue_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <ar.com.alabarra.guicommons.gui.components.CustomTextView
                    android:id="@+id/venue_progress_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/unknown_error"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_button"
        style="@style/AccentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/default_component_margin"
        android:visibility="gone"
        tools:text="Ver mi pedido"
        tools:visibility="visible" />

</FrameLayout>