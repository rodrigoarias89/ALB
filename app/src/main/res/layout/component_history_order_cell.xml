<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_component_margin"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/history_order_cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_component_margin"
            android:layout_marginTop="@dimen/default_component_margin"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Bar de Moe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ar.com.alabarra.guicommons.gui.components.CustomTextView
                android:id="@+id/history_order_cell_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                tools:text="3,00 km" />

            <ar.com.alabarra.guicommons.gui.components.CustomTextView
                android:id="@+id/history_order_cell_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_component_margin"
                android:layout_marginLeft="@dimen/default_component_margin"
                android:layout_marginRight="@dimen/small_component_margin"
                android:layout_marginStart="@dimen/small_component_margin"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="$1500" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>