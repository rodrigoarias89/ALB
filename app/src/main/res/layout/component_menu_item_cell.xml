<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/menu_item_cell_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_component_margin"
            android:layout_marginStart="@dimen/default_component_margin"
            android:layout_weight="1"
            android:textColor="@color/white"
            tools:text="Tragos" />

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/menu_item_cell_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_component_margin"
            android:layout_marginRight="@dimen/default_component_margin"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            tools:text="$25" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>