<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/item_order_cell_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_component_margin"
            android:layout_marginStart="@dimen/default_component_margin"
            android:textColor="@color/white"
            tools:text="Fernets" />

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/item_order_cell_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_component_margin"
            android:layout_marginStart="@dimen/default_component_margin"
            android:textColor="@color/white"
            tools:text="x 3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_component_margin"
        android:layout_marginRight="@dimen/default_component_margin"
        android:orientation="horizontal">

        <ar.com.alabarra.guicommons.gui.components.CustomTextView
            android:id="@+id/item_order_cell_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/default_component_margin"
            android:layout_marginRight="@dimen/default_component_margin"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:text="$1500" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_order_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_minus" />

    </LinearLayout>


</RelativeLayout>